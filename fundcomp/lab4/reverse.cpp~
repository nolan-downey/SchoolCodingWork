//Nolan Downey
//In-Class Exercise to reverse an array

#include<iostream>
using namespace std;

int main()
{
	int n = 5;
	int z;
	int	reverse_a[5];

	for (z=0; z<5; z++)
	{

	cout << "Please enter a  number: ";

	cin >> reverse_a[z];
	}

	cout << "Your numbers in reverse order are: ";

	for (int i = n-1; i>=0; i--)
	{
		cout << reverse_a[i] << " ";
	}

	cout << endl;


	return 0;
}
